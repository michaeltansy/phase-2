<h2>Order History</h2>
<table class="table table-hover">
  <thead>
  <tr>
    <th>Order Id</th>
    <th>Type</th>
    <th>Drink Name</th>
    <th>Size</th>
    <th>Status</th>
    <th>Quantity</th>
    <th>Total Price</th>
  </tr>
  </thead>
  <tbody>
  <% @order.each do  |item| %>
      <tr>
        <td><%= item.id %></td>
        <td><%=item.menu.type.name%></td>
        <td><%= item.menu.drink.name %></td>
        <td><%= item.menu.size.name %></td>
        <td><%= item.status.name %></td>
        <td><%= item.quantity %></td>
        <td><%= item.price %></td>
      </tr>
  <% end %>
  </tbody>
</table>